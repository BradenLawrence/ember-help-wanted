{{#light-table table as |t|}}
  {{t.head
    iconAscending='icon-sort-down'
    iconDescending='icon-sort-up'
    onColumnClick=(action 'onColumnClick')
  }}
  {{#t.body
    canSelect=false
  as |body|
  }}
    {{#if isLoading}}
      {{#body.loader}}
        {{table-loader}}
      {{/body.loader}}
    {{/if}}
  {{/t.body}}

{{/light-table}}